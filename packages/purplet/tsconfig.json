{
  "extends": "@purplet/shared-config/tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "noEmit": false,
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
    "types": ["@purplet/shared-config"],
    "paths": {
      "purplet": ["./src/index.ts"],
      "purplet/internal": ["./src/internal.ts"],
      "purplet/env": ["./src/env.ts"],
      "purplet/types": ["./src/types.ts"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": ["**/node_modules", "**/dist", "runtime-imports.d.ts"]
}
